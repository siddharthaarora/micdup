{
  "hotkey": {
    "modifiers": "Control+Shift",
    "key": "Space",
    "enabled": true
  },
  "whisper": {
    "model": "base",
    "language": "en",
    "modelPath": "./models",
    "pythonPath": "python"
  },
  "audio": {
    "sampleRate": 16000,
    "channels": 1,
    "bitsPerSample": 16,
    "deviceIndex": 0
  },
  "behavior": {
    "autoPaste": true,
    "copyToClipboard": true,
    "showNotifications": true
  },
  "startup": {
    "runAtWindowsStartup": false
  },
  "logging": {
    "level": "Information",
    "path": "./logs"
  }
}
